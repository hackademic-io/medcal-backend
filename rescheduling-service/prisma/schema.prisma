generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id             String      @id
  email          String?   
  first_name     String?
  last_name      String?
  open_to_earlier Boolean
  date           DateTime
  time           String
  status         AppointmentStatus
  isPending Boolean? @default(false)
}

enum AppointmentStatus {
  BOOKED
  CANCELED
  CONFIRMED
}